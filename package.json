{
  "name": "github_exporter",
  "version": "1.7.0",
  "description": "Export various metrics including insights about github repositories",
  "main": "index.js",
  "scripts": {
    "start": "./index.js",
    "lint": "standard | snazzy",
    "format": "standard --fix",
    "cm": "npx git-cz",
    "test": "npm run test:unit",
    "test:unit": "mocha",
    "test:integration": "echo",
    "coverage": "npm run coverage:unit && npm run coverage:integration && npm run coverage:report",
    "coverage:unit": "nyc --silent npm run test:unit",
    "coverage:integration": "nyc --silent --no-clean npm run test:integration",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "prepare": "husky install"
  },
  "files": [
    "index.js",
    "lib/**/*.js",
    "templates/**"
  ],
  "bin": "index.js",
  "repository": {
    "type": "git",
    "url": "github:jkroepke/github_exporter.git"
  },
  "engines": {
    "node": ">= 8"
  },
  "keywords": [
    "github",
    "prometheus",
    "metrics",
    "insights",
    "traffic",
    "git",
    "exporter",
    "statistics"
  ],
  "author": {
    "name": "Jan-Otto Kr√∂pke",
    "email": "npm@jkropke.de",
    "url": "https://github.com/jkroepke/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jkroepke/github_exporter/issues"
  },
  "homepage": "https://github.com/jkroepke/github_exporter#readme",
  "dependencies": {
    "@octokit/auth-action": "^4.0.1",
    "@octokit/auth-app": "^6.0.1",
    "@octokit/auth-oauth-app": "^7.0.1",
    "@octokit/auth-token": "^4.0.0",
    "@octokit/graphql": "^7.0.2",
    "@octokit/plugin-throttling": "^8.0.0",
    "@octokit/rest": "^20.0.1",
    "dotenv": "^16.3.1",
    "prom-client": "^14.2.0",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/yargs": "^17.0.24",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "semantic-release": "^22.0.5",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
