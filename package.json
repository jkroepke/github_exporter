{
  "name": "github_exporter",
  "version": "1.8.0",
  "description": "Export various metrics including insights about github repositories",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "lint": "prettier '**/*.{ts,json}'",
    "format": "prettier --write '**/*.{ts,json}'",
    "cm": "npx git-cz",
    "test": "npm run test:unit",
    "test:unit": "mocha",
    "test:integration": "echo",
    "coverage": "npm run coverage:unit && npm run coverage:integration && npm run coverage:report",
    "coverage:unit": "nyc --silent npm run test:unit",
    "coverage:integration": "nyc --silent --no-clean npm run test:integration",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch index.ts",
    "build:watch": "tsc -p tsconfig.json --watch",
    "start:dist": "node --enable-source-maps dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "templates/**"
  ],
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "github:jkroepke/github_exporter.git"
  },
  "engines": {
    "node": ">= 24"
  },
  "keywords": [
    "github",
    "prometheus",
    "metrics",
    "insights",
    "traffic",
    "git",
    "exporter",
    "statistics"
  ],
  "author": {
    "name": "Jan-Otto Kr√∂pke",
    "email": "npm@jkropke.de",
    "url": "https://github.com/jkroepke/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jkroepke/github_exporter/issues"
  },
  "homepage": "https://github.com/jkroepke/github_exporter#readme",
  "dependencies": {
    "@octokit/auth-action": "^6.0.2",
    "@octokit/auth-app": "^8.1.2",
    "@octokit/auth-oauth-app": "^9.0.3",
    "@octokit/auth-token": "^6.0.0",
    "@octokit/graphql": "^9.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^22.0.1",
    "dotenv": "^17.2.3",
    "prom-client": "^15.1.3",
    "winston": "^3.19.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.5",
    "nyc": "^18.0.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
